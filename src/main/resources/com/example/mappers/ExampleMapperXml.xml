<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mappers.ExampleMapperClass">
    <select id="selectExample" resultType="com.example.mybatis.entity.ExamplePojo">
        select id as id, content as content
        from example
        where id = #{id}
    </select>
</mapper>